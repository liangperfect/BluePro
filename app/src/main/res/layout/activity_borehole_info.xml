<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".inclinometer.BoreholeInfoActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:contentInsetStart="0dp"
            app:navigationContentDescription=""
            app:navigationIcon="@drawable/nav_arrow_left">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:ellipsize="end"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:singleLine="true"
                android:text="Inclinometer"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Inclinometer" />

            <!--            <androidx.appcompat.widget.AppCompatTextView-->
            <!--                android:id="@+id/tvTitle2"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_gravity="right"-->
            <!--                android:background="@android:color/transparent"-->
            <!--                android:ellipsize="end"-->
            <!--                android:paddingStart="12dp"-->
            <!--                android:paddingEnd="12dp"-->
            <!--                android:singleLine="true"-->
            <!--                android:text="Company"-->
            <!--                android:textColor="@color/black"-->
            <!--                android:textSize="18sp"-->
            <!--                tools:text="70%" />-->

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工地名稱"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtConstructionSite"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/edt_bg_white"
            android:hint="請輸入"
            android:maxLength="20"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/tv1"
            app:layout_constraintEnd_toStartOf="@id/imgbConstructionSite"
            app:layout_constraintStart_toEndOf="@id/tv1"
            app:layout_constraintTop_toTopOf="@id/tv1" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/imgbConstructionSite"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:background="@color/white"
            android:scaleType="fitXY"
            android:src="@drawable/add_file"
            app:layout_constraintBottom_toBottomOf="@id/edtConstructionSite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/edtConstructionSite" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="孔號"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/tv1"
            app:layout_constraintTop_toBottomOf="@id/tv1" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtHoleNumber"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:background="@drawable/edt_bg_white"
            android:hint="請輸入"
            android:maxLength="20"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/tv2"
            app:layout_constraintEnd_toEndOf="@id/edtConstructionSite"
            app:layout_constraintStart_toStartOf="@id/edtConstructionSite"
            app:layout_constraintTop_toTopOf="@id/tv2" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="A0方向描述"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/tv1"
            app:layout_constraintTop_toBottomOf="@id/tv2" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtAoDes"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:background="@drawable/edt_bg_white"
            android:hint="請輸入"
            android:maxLength="20"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/tv3"
            app:layout_constraintEnd_toEndOf="@id/edtConstructionSite"
            app:layout_constraintStart_toStartOf="@id/edtConstructionSite"
            app:layout_constraintTop_toTopOf="@id/tv3" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="168dp"
            android:text="測量點數"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/tv1"
            app:layout_constraintTop_toBottomOf="@id/tv2" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvMeasurePoints"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/edt_bg"
            android:gravity="center"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="201"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/tv4"
            app:layout_constraintEnd_toEndOf="@id/edtConstructionSite"
            app:layout_constraintStart_toStartOf="@id/edtConstructionSite"
            app:layout_constraintTop_toTopOf="@id/tv4" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="間隔(m)"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/tv1"
            app:layout_constraintTop_toBottomOf="@id/tv4" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvInterval"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/edt_bg"
            android:gravity="center"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="0.5"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/tv5"
            app:layout_constraintStart_toStartOf="@id/edtConstructionSite"
            app:layout_constraintTop_toTopOf="@id/tv5" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/tv5"
            app:layout_constraintStart_toStartOf="@id/tvMeasurePoints"
            app:layout_constraintTop_toTopOf="@id/tv5">

            <RadioButton
                android:id="@+id/radioButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="0.5m" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="1.0m" />
        </RadioGroup>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="頂部深度(m)"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/tv1"
            app:layout_constraintTop_toBottomOf="@id/tv5" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtTopDepth"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:background="@drawable/edt_bg_white"
            android:enabled="false"
            android:gravity="center"
            android:hint="請輸入"
            android:inputType="numberDecimal"
            android:maxLength="4"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="0.5"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/tv6"
            app:layout_constraintEnd_toEndOf="@id/edtConstructionSite"
            app:layout_constraintStart_toStartOf="@id/edtConstructionSite"
            app:layout_constraintTop_toTopOf="@id/tv6" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTopHit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="請錄入正確頂部深度"
            android:textColor="@color/red"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/edtTopDepth"
            app:layout_constraintStart_toStartOf="@id/edtTopDepth"
            app:layout_constraintTop_toBottomOf="@id/edtTopDepth"
            tools:visibility="visible" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="底部深度(m)"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/tv1"
            app:layout_constraintTop_toBottomOf="@id/tvTopHit" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtBottomDepth"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:background="@drawable/edt_bg_white"
            android:gravity="center"
            android:hint="請輸入"
            android:inputType="numberDecimal"
            android:maxLength="4"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="100"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/tv7"
            app:layout_constraintEnd_toEndOf="@id/edtConstructionSite"
            app:layout_constraintStart_toStartOf="@id/edtConstructionSite"
            app:layout_constraintTop_toTopOf="@id/tv7" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnOk"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/btn_mode_selector"
            android:text="OK"
            android:textColor="@color/white"
            android:textSize="42sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edtBottomDepth" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>