<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vitalong.inclinometer">

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" /> <!-- 向SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_LOGS" />

    <application
        android:name="com.vitalong.inclinometer.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/launch_start"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.vitalong.inclinometer.inclinometer.Survey2Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.vitalong.inclinometer.inclinometer.BoreholeInfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.vitalong.inclinometer.inclinometer.SelectModeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.vitalong.inclinometer.inclinometer.AboutUsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.vitalong.inclinometer.inclinometer.WebViewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.vitalong.inclinometer.bluepro.VerifyResultActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.vitalong.inclinometer.bluepro.ShareFileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.vitalong.inclinometer.bluepro.GraphActivity"
            android:screenOrientation="landscape" />
        <activity android:name="com.vitalong.inclinometer.bluepro.SurveyListActivity" />
        <activity android:name="com.vitalong.inclinometer.bluepro.CompareActivity" />
        <activity android:name="com.vitalong.inclinometer.bluepro.SaveDataActivity" />
        <activity android:name="com.vitalong.inclinometer.bluepro.SurveyActivity" />
        <activity android:name="com.vitalong.inclinometer.bluepro.CoefficientsActivity" />
        <activity
            android:name="com.vitalong.inclinometer.bluepro.SettingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.vitalong.inclinometer.OperationPanelActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.vitalong.inclinometer.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.vitalong.inclinometer.BlueToothLeService.BluetoothLeService"
            android:enabled="true" />
        <service
            android:name="com.vitalong.inclinometer.BlueToothLeService.SppConnectService"
            android:enabled="true" />

        <activity
            android:name="com.vitalong.inclinometer.ServicesActivity"
            android:label="@string/title_activity_services"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.TransparentAct" />
        <activity
            android:name="com.vitalong.inclinometer.CharacteristicsActivity"
            android:label="@string/title_activity_characteritics"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.TransparentAct" />
        <activity
            android:name="com.vitalong.inclinometer.GattDetailActivity"
            android:label=""
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.TransparentAct"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.vitalong.inclinometer.SPPBlueTooth.SppBlueThoothActivity"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden" />
        <activity
            android:name="com.vitalong.inclinometer.UpdateActivity"
            android:theme="@style/dialogstyle" />
    </application>
</manifest>